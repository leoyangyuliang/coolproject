<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">



    <EditText
        android:id="@+id/editText"
        android:layout_width="match_parent"
        android:layout_centerHorizontal="true"
        android:layout_height="272dp"
        android:layout_above="@+id/btnSaveJournal"
        android:layout_alignParentTop="true"
        android:layout_marginTop="13dp"
        android:ems="10"
        android:gravity="top"
        android:inputType="textMultiLine"
        android:scrollbars="vertical"/>

    <Button
        android:id="@+id/btnSaveJournal"
        android:layout_width="match_parent"
        android:layout_height="47dp"
        android:layout_above="@+id/btnDeleteJournal"
        android:layout_centerHorizontal="true"
        android:text="Save Journal" />

    <Button
        android:id="@+id/btnDeleteJournal"
        android:layout_width="match_parent"
        android:layout_height="47dp"
        android:layout_above="@+id/button"
        android:layout_centerHorizontal="true"
        android:text="Delete Journal" />
    <Button
        android:id="@+id/button"
        android:layout_width="match_parent"
        android:layout_height="47dp"
        android:layout_alignParentBottom="true"
        android:text="Go To Main Page"
        android:layout_centerHorizontal="true"
 />

</RelativeLayout>